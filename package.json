    "@angular/cli": "^21.1.3",
    "@angular/compiler-cli": "^21.0.8",
    "@types/jest": "^29.5.13",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "browser-sync": "^3.0.0",
    "eslint": "^8.57.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "30.2.0",
